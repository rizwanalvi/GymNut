<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/Bg"
    tools:context=".MainFragActivity">

<ScrollView
    android:scrollbars="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textColor="@color/black"    >

 <TextView
    android:textSize="40dp"
     android:textColor="@color/black"
     android:textAlignment="center"
     android:text="PERSONAL INFO"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginBottom="40dp"
     />




 <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="15dp"
    >


<TextView
    android:textColor="@color/black"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="Name"
    android:textSize="23dp"
    />


<TextView
    android:textColor="@color/black"
    android:textSize="23dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="Age" />

</LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    >


<EditText
    android:id="@+id/txtName"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
/>

<EditText
    android:id="@+id/txtAge"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
/>

</LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="15dp"
    >

<TextView
    android:textColor="@color/black"
    android:textSize="23dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="Height" />

<TextView
    android:textColor="@color/black"
    android:textSize="23dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="Weight" />

</LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    >


<EditText
    android:id="@+id/txtHeight"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    />

<EditText
    android:id="@+id/txtWeight"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    />

</LinearLayout>

<TextView
    android:textColor="@color/black"
    android:textSize="23dp"
    android:text="Gender"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    />

<Spinner
    android:id="@+id/cobGender"
    android:minHeight="50dp"
    android:entries="@array/lstgender"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    />

<TextView
    android:textColor="@color/black"
    android:textSize="25dp"
    android:text="Daily Activity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    />

<Spinner
    android:id="@+id/cobActitviy"
    android:minHeight="50dp"
    android:entries="@array/lstActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    />


<TextView

    android:textColor="@color/black"
    android:textSize="25dp"
    android:text="Sleep Durations"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    />

<Spinner
    android:id="@+id/cobSleep"
    android:minHeight="50dp"
    android:entries="@array/sleep"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    />

<Button
    android:id="@+id/btnSave"
    android:textColor="@color/black"
    android:layout_gravity="center"
    android:text="NEXT"
    android:textSize="23dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

</LinearLayout>



</ScrollView>

</RelativeLayout>
